<%- include ("./partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached">
        <div calss="ui divided items">
                
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="ui centered rounded image">
                        <img src="<%= blog.image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id%>"><%=blog.title %></a>
                        <div class="meta">
                            <span><%= blog.Created.toDateString() %></span>     
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0, 100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= blog._id%>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>                         
                </div>          
            <% }) %>
        <!-- </div> -->
    </div>
</div>



<%- include("./partials/footer") %>

